package web

templ HelloForm() {
	@Base() {
		<form hx-post="/hello" method="POST" hx-target="#hello-container">
			<input class="bg-gray-200 text-black p-2 border border-gray-400 rounded-lg" id="firstName" name="firstName" type="text"/>
			<input class="bg-gray-200 text-black p-2 border border-gray-400 rounded-lg" id="lastName" name="lastName" type="text"/>
			<button type="submit" class="bg-orange-500 hover:bg-orange-700 text-white py-2 px-4 rounded">Submit</button>
		</form>
		<div id="hello-container"></div>
	}
}

templ HelloPost(firstName, lastName string) {
	<div class="bg-green-100 p-4 shadow-md rounded-lg mt-6">
		<p>Hello, { firstName } { lastName }</p>
	</div>
}
